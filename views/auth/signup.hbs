<div id="form">
  <h2>Sign Up</h2>
  <form action="/auth/signup" method="POST">

   <label> Nombre
      <input type="text" name="nombre" placeholder="Escribe tu Nombre" />
    </label>

    <label> Username
      <input type="text" name="username" placeholder="Escribe tu Usuario" />
    </label>

    <label> Email
      <input type="email" name="email" placeholder="Escribe tu E-mail" />
    </label>

    <label> Password
      <input type="password" name="password" placeholder="Escribe tu ContraseÃ±a" />
    </label>

    <div>
      <select id="paisSelector" name="nacionalidad"></select>
    </div>

    <div>
      <select name="genero" aria-placeholder="Selecciona tu Genero">
